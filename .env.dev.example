MONGO_URI=mongodb://localhost:27017/plurify
PORT=8080
NODE_ENV=dev

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here

# Amazon LWA (Login with Amazon) OAuth Configuration
# Get these from Solution Provider Portal: https://sellingpartnerapi.amazon.com/
# Using SDK's expected environment variable names
SELLING_PARTNER_APP_CLIENT_ID=your-amazon-client-id-here    # LWA Client ID from Solution Provider Portal
SELLING_PARTNER_APP_CLIENT_SECRET=your-amazon-client-secret-here     # LWA Client Secret from Solution Provider Portal
LWA_APP_ID=your-amazon-client-id-here    # Same as SELLING_PARTNER_APP_CLIENT_ID
LWA_CLIENT_SECRET=your-amazon-client-secret-here     # Same as SELLING_PARTNER_APP_CLIENT_SECRET
AMAZON_REDIRECT_URI=http://localhost:3000/dashboard/amazon-callback

# Encryption Key (32 characters)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Amazon Sandbox Configuration (for testing)
# Set AMAZON_SANDBOX_MODE=true to enable sandbox testing
AMAZON_SANDBOX_MODE=true
# Add your sandbox refresh token here when testing
AMAZON_SANDBOX_REFRESH_TOKEN=your-sandbox-refresh-token-here
# Optional: Default seller ID for sandbox
AMAZON_SANDBOX_SELLER_ID=SANDBOX_SELLER
# Optional: Default marketplace IDs (comma-separated)
AMAZON_SANDBOX_MARKETPLACE_IDS=ATVPDKIKX0DER

# ====================================
# STRIPE CONFIGURATION (REQUIRED)
# ====================================
# Get your test keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here

# WEBHOOK SECRET (REQUIRED FOR WEBHOOKS)
# 1. Go to: https://dashboard.stripe.com/test/webhooks
# 2. Add endpoint: http://localhost:8080/api/stripe/webhook
# 3. Copy the "Signing secret" that starts with whsec_
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Application URLs
APP_DOMAIN=http://localhost:8080
FRONTEND_URL=http://localhost:3000