MONGO_URI=mongodb://localhost:27017/plurify_staging
PORT=8080
NODE_ENV=staging

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_staging_32_chars_long

# Amazon LWA (Login with Amazon) OAuth Configuration
# Get these from Solution Provider Portal: https://sellingpartnerapi.amazon.com/
# (Seller Central app management is being phased out)
AMAZON_CLIENT_ID=amzn1.application-oa2-client.xxx    # LWA Client ID from Solution Provider Portal
AMAZON_CLIENT_SECRET=your_lwa_client_secret_here     # LWA Client Secret from Solution Provider Portal
AMAZON_REDIRECT_URI=https://staging.plurify.com/dashboard/amazon-callback

# Encryption Key (32 characters)
ENCRYPTION_KEY=staging_encryption_key_32charsln